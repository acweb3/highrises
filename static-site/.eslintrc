{
    "rules": {
        "no-undef": "off",
        "no-console": "warn",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "error",
        "no-restricted-properties": [
            1,
            {
                "object": "document",
                "property": "addEventListener",
                "message": "Please use useDocumentListener"
            },
            {
                "object": "window",
                "property": "addEventListener",
                "message": "Please use useWindowListener"
            }
        ]
    },
    "plugins": [
        "react-hooks"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "allowImportExportEverywhere": true,
        "ecmaFeatures": {
            "jsx": true
        }
    }
}